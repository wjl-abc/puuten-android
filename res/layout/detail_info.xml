<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/backButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Back" />

    <TextView
        android:id="@+id/horizontalLine"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#808080"
        android:paddingBottom="2px"
        android:paddingTop="2px" />

    <ImageView
        android:id="@+id/BusinessPic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/backButton"
        android:scaleType="centerCrop"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="5dp"
        android:background="#808080"
        android:paddingBottom="2px"
        android:paddingTop="2px" 
        android:src="@drawable/ic_launcher" />
    
    <ImageView
        android:id="@+id/WbPosterIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"
        android:background="#808080"
        android:paddingBottom="2px"
        android:paddingTop="2px" 
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/WbPosterIcon"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="50dp"
        android:maxLines="3"
        android:text="TextView" />

    <ImageView
        android:id="@+id/StarIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/textInfo"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/star1" />

    <TextView
        android:id="@+id/PosterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/WbPosterIcon"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/WbPosterIcon"
        android:lines="1"
        android:text="TextView" />

</RelativeLayout>